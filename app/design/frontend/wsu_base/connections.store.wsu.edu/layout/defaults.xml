				<title>Compare Products</title>
				<prepare/>
				<urlParams/>
				<position>10</position>
				<liParams/>

			</action>-->

		</reference>
		<reference name="content">
            <remove name="breadcrumbs" />
        </reference>
	</default>
<!-- HOME PAGE %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
	<cms_index_index>
